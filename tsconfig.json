{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2015", "es2016"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "dist",
    "stripInternal": true,
    "target": "es5"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "__tests__/fixtures/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": false,
    "babelCore": "@babel/core"
  }
}
